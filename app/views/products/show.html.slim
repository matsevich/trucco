.d-flex.justify-content-center.align-items-center.mb-4
  h1
    = @product.name
  h3.ms-5.mb-0.text-center.align-middle
    = link_to edit_product_path(@product)
      = fa_icon 'edit'
  h3.ms-3.mb-0.text-center.align-middle
    = link_to product_path(@product), method: :delete, data: { confirm: t('.confirmation') }
      = fa_icon 'trash'
.d-flex
  .pic.mb-3
    img alt="#{t('.pic_alt')}" src='data:image/jpeg;base64,'
  .description-block.ms-4
    p
      i
        = t('.category')
      span.ms-2
        = @product.category.title
    p
      i
        = t('.description')
      p.ms-4
        = @product.description.capitalize
p
  = t('.available')
= link_to products_path
  h2.back
    i.fa.fa-arrow-left


= render 'products/show_prices', object: @product
